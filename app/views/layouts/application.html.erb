<!DOCTYPE html>
<html>
  <head>
    <title>ImmersiveRailsAssessment</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "/logout" %>
    <% if flash[:errors]%>
    <% flash[:errors].each do |error|%>
    <h3><%=error%></h3>
    <% end%>
    <% end%>
    <%= yield %>
  </body>
</html>
