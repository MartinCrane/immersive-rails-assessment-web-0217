<%= form_for appearance do |f| %>
<%= f.label :guest_id%>
<%= f.collection_select(:guest_id, Guest.all, :id, :name, {:include_blank => true}) %>
<%= f.label :episode_number%>
<%= f.collection_select(:episode_id, Episode.all, :id, :number, {:include_blank => true}) %>
<%= f.label :rating%>
<%= f.text_field :rating %><br />
<%= f.submit %>
<% end %>
